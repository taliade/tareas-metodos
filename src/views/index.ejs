

    <main>

        <h1> Tarea</h1>
        <h2>Crear Tarea</h2>

  <form action="/" method="post">
    <div>
      <label for="title">Nombre: </label>
      <input type="text" name="title" id="title" />
    </div>
    <button type="submit">Enviar</button>
  </form>

  <h2>Listado de tareas</h2>
  <ul>
    <!-- La tareas que vamos hacer dinamicas -->
  
    <% tareas.forEach(tarea => { %> 
      <li><%= tarea.title %></li>
      
    <% }) %>
</ul>

  
</main>
